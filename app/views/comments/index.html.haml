<h1>Listing Comments for <%=@user.name %> </h1>

<table>
  <tr>
    <th>Comment</th>
  
    <th>Comment_id</th>
    <th>User_id</th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.posts %></td>
    <td><%= comment.id %></td>
    <td><%= comment.user_id %> </td>
     
    <td><<%= link_to 'Show', user_comment_path(@user.id,comment.id)  %> </td> 
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_user_comment_path %>