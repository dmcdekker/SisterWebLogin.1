%p#notice= notice
%p
  %b Topic:
  = @userblog.title
%p
  %b Blog Post:
  = @userblog.description
%p
  %b Author:
  = @userblog.user.name


-if @user.id == @current_user.id
  =render :partial => 'useredit'
-else
  =render :partial => 'readeredit'
 
%br/
%br/
%br/
%table
  %tr
    %th Comments:
    %th
  - @userblog.comments.each do |comment|
    %tr
      %td= link_to comment.creator, user_path(comment.creatorid)
      %th said:
      %td= comment.content
