!!! 5
%html{:lang => "en"}
  %head
    %title 
    = stylesheet_link_tag 'blogpost', media: "all", "data-turbolinks-track" => true 
    = javascript_include_tag 'blogpost', "data-turbolinks-track" => true 
    = csrf_meta_tags

.container
  .col-md-8
  %p#notice= notice
  %p
    %b= @userblog.user.name 
    %b wrote 
    = @userblog.title
  %p
    %b 
    = @userblog.description
  
  
  .col-md-4
  -if @user.id == @current_user.id
    =render :partial => 'useredit'
  -else
    =render :partial => 'readeredit'
   
  %br/
  %br/
  %br/
  
  %table#comments
    %tr
      %th Comments
      %th
    - @userblog.comments.each do |comment|
      %tr
        %td= link_to comment.creator, user_path(comment.creatorid)
        %td= comment.content
